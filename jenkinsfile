pipeline {
    agent any

    stages {
      stage('checkout') {
        steps {
          git branch: 'main', credentialsId: 'git_login', url: 'https://github.com/bnilles/dockerfile-test-loan.git'
        }
      }
        stage('Build') {
            steps {
                  
                    sh 'docker build . -t jbnilles/loan-test:latest'

                 
            }
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "./gradlew sonarqube"
                }
            }
        }
        stage("Quality gate") {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker push jbnilles/loan-test:latest'
            }
        }
    }

}