pipeline {
    agent any

    stages {
      stage('checkout') {
        steps {
          git branch: 'main', credentialsId: 'git_login', url: 'https://github.com/bnilles/dockerfile-test-loan.git'
        }
      }
        stage('Build') {
            steps {
                  
                    sh 'docker build . -t jbnilles/loan-test:latest'

                 
            }
        }
        stage('Test') {
            steps {
                echo 'Testing.. ${env.BUILD_NUMBER}'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker push jbnilles/loan-test:latest'
            }
        }
    }

}